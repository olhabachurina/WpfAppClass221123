<Window x:Class="WpfAppClass221123.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppClass221123"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Открыть окно" Click="OpenWindow_Click" Background="Green"/>
            <Button Content="Закрыть окно" Click="CloseWindow_Click" Background="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
